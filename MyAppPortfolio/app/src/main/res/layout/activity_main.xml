<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:textSize="24sp"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/app1_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app1"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/app_color"
        android:onClick="showApp1"
        />

    <Button
        android:id="@+id/app2_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app2"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/app_color"
        android:onClick="showApp2"/>

    <Button
        android:id="@+id/app3_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app3"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/app_color"
        android:onClick="showApp3"/>

    <Button
        android:id="@+id/app4_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app4"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/app_color"
        android:onClick="showApp4"/>

    <Button
        android:id="@+id/app5_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app5"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/app_color"
        android:onClick="showApp5"/>

    <Button
        android:id="@+id/app6_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/app6"
        android:textColor="#fff"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/capstone_color"
        android:onClick="showApp6"/>
</LinearLayout>
